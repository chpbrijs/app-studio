<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    style="@style/relative_layout_total">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameGrid"
        android:rowCount="3"
        android:columnCount="2"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <EditText
            android:hint="Player 1"
            android:id="@+id/player1name"
            style="@style/edit_text.name_input"/>

        <EditText
            android:layout_alignParentRight="true"
            android:id="@+id/player2name"
            android:hint="Player 2"
            style="@style/edit_text.name_input"/>

        <Button
            android:text="clear"
            android:id="@+id/player1nameButton"
            android:onClick="clearEditText"
            style="@style/button"/>

        <Button
            android:text="clear"
            android:id="@+id/player2nameButton"
            android:onClick="clearEditText"
            style="@style/button"/>

        <Spinner
            android:id="@+id/spinner1"
            style="@style/spinner">
        </Spinner>

        <Spinner
            android:layout_alignParentRight="true"
            android:id="@+id/spinner2"
            style="@style/spinner">
        </Spinner>

    </GridLayout>

    <Button
        android:text="Start"
        android:onClick="startButtonClicked"
        android:id="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        style="@style/button.big.large_text.title"/>

</RelativeLayout>