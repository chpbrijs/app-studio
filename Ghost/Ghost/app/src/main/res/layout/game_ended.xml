<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/winnerNameTextView"
        android:textSize="40sp"
        android:text="Cindy has won!"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="hellohelloohheelloooooo cannot form a word!"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wordResultTextView"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/winnerNameTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You have moved to place 4!"
        android:id="@+id/newPlaceTextView"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/goToRankingButton"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="View ranking"
        android:id="@+id/goToRankingButton"
        android:onClick="toRankingScreen"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/changeNamesFromWinScreen"
        android:layout_alignStart="@+id/changeNamesFromWinScreen" />

    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="New game"
        android:textSize="20dp"
        android:id="@+id/newGameButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="newGameButtonClicked"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/changeNamesFromWinScreen"
        android:layout_below="@id/newGameButton"
        android:layout_centerHorizontal="true"
        android:text="Change names"
        android:onClick="changePlayerNames"
        android:layout_margin="5dp"/>

</RelativeLayout>
